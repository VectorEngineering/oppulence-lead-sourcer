
// Endpoint references userId -> users.id
model Endpoint {
  id           String        @id @default(cuid())
  userId       String
  name         String
  schema       Json
  enabled      Boolean       @default(true)
  webhookEnabled Boolean     @default(false)
  emailNotify  Boolean       @default(false)
  webhook      String?
  formEnabled  Boolean       @default(false)
  successUrl   String?
  failUrl      String?
  token        String?
  createdAt    DateTime
  updatedAt    DateTime

  // RELATION
  user         User          @relation(fields: [userId], references: [id])
  leads        Lead[]
  logs         Log[]

  @@index([userId])
}
