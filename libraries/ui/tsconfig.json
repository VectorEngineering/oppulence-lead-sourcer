  "exclude": ["dist", "build", "node_modules"],
  "compilerOptions": {
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "lib": ["dom", "es2017"],
    "target": "es2017",
    "strict": true
  }
}
