    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.test.ts",
    "vitest.config.ts"
  ],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "types": ["vitest/globals", "node"],
    "allowJs": true
  }
