  budgetOverrunNotifications Boolean @default(false)  // Notifications when exceeding budget
  monthlyBudgetSummaries   Boolean @default(false)  // Monthly budget performance reports
  categoryBudgetAlerts     Boolean @default(false)  // Category-specific budget notifications
  budgetRecommendations    Boolean @default(false)  // AI-powered budget optimization suggestions

  // Security Notifications
  loginAttemptAlerts       Boolean @default(false)  // Notifications of login attempts
  deviceAuthorizationAlerts Boolean @default(false)  // New device authorization requests
  securitySettingChanges   Boolean @default(false)  // Changes to security settings and preferences
  fraudAlerts              Boolean @default(false)  // Potential fraud or suspicious activity
