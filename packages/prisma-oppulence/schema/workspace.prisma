  // Bank Connection Notifications
  connectionStatusChanges  Boolean @default(false)  // Bank connection status updates
  syncFailureAlerts       Boolean @default(false)  // Failed synchronization notifications
  reconnectionReminders   Boolean @default(false)  // Reminders to reconnect bank accounts
  newAccountDiscovery     Boolean @default(false)  // Detection of new bank accounts
  credentialUpdateReminders Boolean @default(false)  // Reminders to update bank credentials

  // Document Notifications
  newDocumentAlerts       Boolean @default(false)  // Notifications for new document uploads
  documentSharingEvents   Boolean @default(false)  // Document sharing and access updates
  signatureRequests       Boolean @default(false)  // Requests for document signatures
  documentExpirationAlerts Boolean @default(false)  // Document expiration warnings
  complianceDocumentAlerts Boolean @default(false)  // Required compliance document notifications

  // Invoice Notifications
  newInvoiceAlerts        Boolean @default(false)  // Notifications for new invoice creation
  invoicePaymentReceipts  Boolean @default(false)  // Confirmations of invoice payments
  overdueInvoiceReminders Boolean @default(false)  // Reminders for overdue invoices
  invoiceDisputeAlerts    Boolean @default(false)  // Notifications about invoice disputes
  recurringInvoiceUpdates Boolean @default(false)  // Updates to recurring invoice schedules

  // Contract Notifications
  contractDraftAlerts     Boolean @default(false)  // Notifications for new contract drafts
  contractSignatureAlerts Boolean @default(false)  // Contract signature status updates
  contractRenewalReminders Boolean @default(false)  // Contract renewal deadline reminders
  contractAmendmentAlerts Boolean @default(false)  // Notifications of contract amendments
  contractTemplateUpdates Boolean @default(false)  // Updates to contract templates

  // Report Notifications
  monthlyReportAvailability Boolean @default(false)  // Monthly financial report availability
  customReportCompletion   Boolean @default(false)  // Custom report generation notifications
  analyticsInsightAlerts   Boolean @default(false)  // AI-generated analytics insights
  taxReportAvailability    Boolean @default(false)  // Tax-related report notifications
  auditReportAlerts        Boolean @default(false)  // Audit report availability and findings

  // Customer Notifications
  newCustomerRegistrations Boolean @default(false)  // New customer registration alerts
  customerProfileChanges   Boolean @default(false)  // Customer profile update notifications
  customerPaymentUpdates   Boolean @default(false)  // Customer payment method changes
  customerSupportTickets   Boolean @default(false)  // Customer support ticket updates
  customerActivityAlerts   Boolean @default(false)  // Unusual customer activity notifications

  // Category Management Notifications
  newCategoryAlerts       Boolean @default(false)  // New category creation notifications
  categoryRuleUpdates     Boolean @default(false)  // Changes to categorization rules
  uncategorizedTransactions Boolean @default(false)  // Alerts for uncategorized transactions
  categoryMergeNotifications Boolean @default(false)  // Category consolidation updates
  autoCategorizeUpdates   Boolean @default(false)  // Auto-categorization system changes

  // Tax Document Notifications
  taxFormAvailability     Boolean @default(false)  // New tax form availability alerts
  taxFilingDeadlines      Boolean @default(false)  // Tax filing deadline reminders
  taxPaymentReminders     Boolean @default(false)  // Tax payment due date notifications
  annualTaxSummaries      Boolean @default(false)  // Year-end tax summary availability
  taxPreparationUpdates   Boolean @default(false)  // Tax preparation status updates

  projectUser ProjectUsers @relation(fields: [projectUserId], references: [id], onDelete: Cascade)
}
