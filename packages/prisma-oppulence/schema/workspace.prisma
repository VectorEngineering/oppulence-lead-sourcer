  // Platform Usage Notifications
  linkUsageWeeklyReport     Boolean @default(false)  // Weekly summary of link usage and performance
  linkUsageLimitAlerts      Boolean @default(false)  // Notifications when approaching or exceeding usage limits
  domainVerificationAlerts  Boolean @default(false)  // Domain verification status changes and issues
  domainExpirationAlerts    Boolean @default(false)  // Domain expiration warnings and renewal reminders
  sslCertificateAlerts      Boolean @default(false)  // SSL certificate issues and expiration warnings

  // Transaction Notifications
  newTransactionAlerts      Boolean @default(false)  // Notifications for new transactions posted to accounts
  largeTransactionAlerts    Boolean @default(false)  // Alerts for transactions exceeding defined thresholds
  recurringTransactionAlerts Boolean @default(false)  // Notifications about recurring transaction patterns
  failedTransactionAlerts   Boolean @default(false)  // Alerts for failed or declined transactions
  transactionDisputeUpdates Boolean @default(false)  // Updates on transaction dispute status and resolution

  // Payment Notifications
  upcomingPaymentReminders  Boolean @default(false)  // Reminders for upcoming scheduled payments
  missedPaymentAlerts       Boolean @default(false)  // Alerts for missed or late payments
  paymentConfirmations      Boolean @default(false)  // Confirmations of successful payments
  paymentMethodAlerts       Boolean @default(false)  // Payment method expiration and update notifications
  recurringPaymentUpdates   Boolean @default(false)  // Changes to recurring payment schedules

  // Balance Notifications
  lowBalanceAlerts         Boolean @default(false)  // Alerts when balance falls below threshold
  negativeBalanceAlerts    Boolean @default(false)  // Notifications for negative balance events
  overdraftWarnings        Boolean @default(false)  // Warnings about potential overdraft situations
  significantBalanceChanges Boolean @default(false)  // Alerts for unusual or large balance changes
  availableCreditUpdates   Boolean @default(false)  // Updates on available credit and limits

  // Budget Notifications
