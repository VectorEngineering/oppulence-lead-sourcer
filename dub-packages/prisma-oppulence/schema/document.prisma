model Document {
  id          String    @id @default(cuid())
  body        String?
  createdAt   DateTime? @map("created_at")
  metadata    Json?
  name        String?
  objectId    String?
  ownerId     String?
  parentId    String?
  pathTokens  String
  tag         String?
  projectId   String?
  title       String?
  description     String?   @db.Text
  type            String?   // File type
  url             String
  size            Int?
  mimeType        String?
  isConfidential  Boolean   @default(false)
  
  // Document Status
  documentType   String?    // proposal, contract, email, etc.
  version        String?
  status         String?
  updatedAt      DateTime   @updatedAt
  // Extended fields
  expiryDate     DateTime?
  shareableLink  String?
  // Metadata
  createdBy       String?   // User ID
  
  owner       User?     @relation(fields: [ownerId], references: [id])
  project     Project?  @relation(fields: [projectId], references: [id])

  @@index([ownerId])
  @@index([projectId])
  Deal Deal[]
  Lead Lead[]
}
